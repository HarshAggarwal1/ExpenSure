<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewCategory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:contentPadding="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout1Category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFE4EBF4"
        android:paddingStart="5dp"
        android:paddingTop="2dp"
        android:paddingEnd="5dp"
        android:paddingBottom="2dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewCommodityNameCard"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Sample Commodity Name"
            android:textColor="@color/purple_500"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButtonCategoryDelete"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/close_button_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewCommodityNameCard"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewCategoryCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Category: Sample Category"
            android:textColor="@color/purple_500"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewCommodityNameCard" />

        <TextView
            android:id="@+id/textViewPricePerPieceCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Expense: â‚¹ 10000.00"
            android:textColor="@color/purple_500"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/textViewCategoryCard"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            tools:layout_editor_absoluteY="2dp" />
        <TextView
            android:id="@+id/textViewQuantityCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity: 10"
            android:textColor="@color/purple_500"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/textViewPricePerPieceCard"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>
