<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="end"
        android:background="@color/grayish_white">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textAllCaps="true"
            android:background="@android:color/transparent"
            android:textColor="@color/purple_500"
            android:layout_marginEnd="10dp"
            android:id="@+id/buttonSaveExpense"/>

    </LinearLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/category_24dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/imageViewDialogCategory" />
                <Spinner
                    android:layout_width="300dp"
                    android:layout_height="36dp"
                    android:id="@+id/spinnerCategory"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imageViewDialogCategory"
                    android:layout_marginTop="10dp" />
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/commodity_name_24dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="25dp"
                    app:layout_constraintTop_toBottomOf="@id/imageViewDialogCategory"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/imageViewDialogCommodityName" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/editTextCommodityNameExpense"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@id/imageViewDialogCommodityName"
                    app:layout_constraintTop_toBottomOf="@id/imageViewDialogCategory"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:endIconMode="clear_text"
                    android:textColorHint="@color/purple_500"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="Commodity Name">
                    <com.google.android.material.textfield.TextInputEditText
                        android:textColor="@color/purple_500"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textAutoCorrect"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/price_24dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="25dp"
                    app:layout_constraintTop_toBottomOf="@id/editTextCommodityNameExpense"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/imageViewDialogPrice" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/editTextPriceExpense"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@id/imageViewDialogPrice"
                    app:layout_constraintTop_toBottomOf="@id/editTextCommodityNameExpense"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:endIconMode="clear_text"
                    android:textColorHint="@color/purple_500"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="Price">
                    <com.google.android.material.textfield.TextInputEditText
                        android:textColor="@color/purple_500"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/quantity_24dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="25dp"
                    app:layout_constraintTop_toBottomOf="@id/editTextPriceExpense"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/imageViewDialogQuantity" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/editTextQuantityExpense"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@id/imageViewDialogQuantity"
                    app:layout_constraintTop_toBottomOf="@id/editTextPriceExpense"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:endIconMode="clear_text"
                    android:textColorHint="@color/purple_500"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="Quantity">
                    <com.google.android.material.textfield.TextInputEditText
                        android:textColor="@color/purple_500"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>



</LinearLayout>

